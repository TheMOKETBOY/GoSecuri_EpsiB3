<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>Auth</servlet-name>
        <servlet-class>com.gosecuri_epsib3.servlets.Auth.AuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.gosecuri_epsib3.servlets.Auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>com.gosecuri_epsib3.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersManage</servlet-name>
        <servlet-class>com.gosecuri_epsib3.servlets.Admin.ManageUsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsersManage</servlet-name>
        <url-pattern>/Admin/Users/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Auth</servlet-name>
        <url-pattern>/Auth/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>

</web-app>